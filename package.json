{
  "name": "@founda/javascript",
  "repository": "git://github.com/founda/javascript.git",
  "version": "1.31.3",
  "description": "Cross project code style",
  "license": "All Rights Reserved",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint --fix ./workspaces",
    "format": "prettier --write \"{,!(node_modules)/**/}*.{js,ts,json,vue}\"",
    "prepare": "npm run build || true"
  },
  "dependencies": {
    "@types/node": "12.11.7",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-eslint": "10.0.3",
    "eslint": "6.6.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-vue": "6.0.1",
    "husky": "3.1.0",
    "lerna": "3.14.1",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "tslint": "5.20.1",
    "tslint-config-airbnb-base": "0.3.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "git add"
    ]
  }
}
